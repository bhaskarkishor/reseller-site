<!DOCTYPE HTML>
<div id="content">
<!-- Content -->
<article>
<h2>Add an item to sell</h2>
<form method="POST" action="/products/create"> 
  <div class="form-group">
    <label for="exampleFormControlInput1">Item Name</label>
    <input type="text" class="form-control" name="name" placeholder="table lamp">
  </div>
 <div class="form-group">
    <label for="exampleFormControlInput1">Price</label>
    <input type="text" class="form-control" name="price" placeholder="100">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Image Link</label>
    <input type="text" class="form-control" name="image" placeholder="https://googleusercontent.....">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
  </div>
  <input type="submit" value="add item" class="btn-success btn-sm">
</form>

</article>

</div>